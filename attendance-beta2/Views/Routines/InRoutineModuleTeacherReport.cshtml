@model IEnumerable<attendance_beta2.Models.Routine>
@{
    ViewBag.Title = "InRoutineModuleTeacherReport";
}
<h2>InRoutineM  oduleTeacherReport</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Select a Course", htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-md-10">
            @Html.DropDownList("CourseId", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <br />
    <br />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-2">
            <input type="submit" value="Apply Filter" class="btn btn-primary" />
        </div>
    </div>
}

<table class="table" style="margin-top:50px">
    <tr>
        <th>
Teacher Name       </th>
        <th>
Class Type        </th>


    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassType)
            </td>

        </tr>
    }

</table>


